# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_postgres_password_here
POSTGRES_DB=primeacc

# Redis
REDIS_PASSWORD=your_strong_redis_password_here

# Backend
BACKEND_PORT=3001
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_in_production
CORS_ORIGINS=http://YOUR_SERVER_IP:3000

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:3001
NEXT_PUBLIC_ALLOW_MEMBER_PARTNERSHIP=true

# Sepay Payment Gateway
SEPAY_API_KEY=sp_live_your_sepay_api_key
SEPAY_WEBHOOK_SECRET=your_webhook_secret_from_generate_script

# Bank Information (VietinBank)
BANK_NAME=VietinBank
BANK_CODE=ICB
BANK_ACCOUNT_NUMBER=101877183706
BANK_ACCOUNT_NAME=YOUR ACCOUNT NAME

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Commission System (Optional - defaults in backend)
COMMISSION_RATE_BRONZE=10
COMMISSION_RATE_SILVER=15
COMMISSION_RATE_GOLD=18
COMMISSION_RATE_DIAMOND=20
COMMISSION_TIER_SILVER_THRESHOLD=1000000
COMMISSION_TIER_GOLD_THRESHOLD=5000000
COMMISSION_TIER_DIAMOND_THRESHOLD=10000000
